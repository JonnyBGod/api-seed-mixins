{
  "name": "Invite",
  "plural": "Invites",
  "base": "PersistedModel",
  "settings": {
    "mongodb": {
      "allowExtendedOperators": true
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "required": true
    },
    "used": {
      "type": "boolean",
      "default": false
    },
    "admin": {
      "type": "boolean",
      "default": false
    },
    "userId": {
      "required": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": [],
  "mixins": {
    "TimeStamp": {
      "required" : false
    },
    "Counts": true,
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for 'Invite' registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ],
    "SetupRemoteMethods": {
      "disableAllExcept": ["stats"]
    }
  }
}