    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": [],
  "mixins": {
    "TimeStamp": {
      "required": false
    },
    "Counts": true,
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for 'Reply' registers.",
        "type": "model",
        "count": {
