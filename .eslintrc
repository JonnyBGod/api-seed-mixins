{
  "plugins": ["prettier", "jest"],
  "extends": ["prettier", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "prettier/prettier": "error",
    "max-len": ["error", 100, 4, {
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true,
      "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
    }]
  },
  "env": {
    "node": true,
    "jasmine": true
  }
}